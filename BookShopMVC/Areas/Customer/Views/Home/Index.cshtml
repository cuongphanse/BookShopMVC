@model IEnumerable<Product>

<div class="row pb-3">
    @foreach (var item in Model)
    {
        <div class="col-lg-3 col-sm-6 mb-4">
            <div class="card border-0 shadow border-top border-5 rounded h-100">
                <img src="@item.ImageUrl" class="card-img-top rounded-top" alt="image" style="height: 350px; object-fit: cover;" />
                <div class="card-body d-flex flex-column">                
                    <div class="text-center mb-2" style="min-height: 60px;">   
                        <p class="card-title h6 text-dark opacity-75 text-uppercase fw-bold">@item.Title</p>
                        <p class="card-title text-warning small">@item.Author</p>
                    </div>

                    <div class="mt-auto text-center">
                        <p class="text-dark opacity-75 mb-1 small">
                            Giá gốc:
                            <span class="text-decoration-line-through">@item.ListPrice.ToString("#,##0")đ</span>
                        </p>
                        <p class="text-dark opacity-75 mb-3 fw-bold">
                            Giảm còn:
                            <span class="text-danger">@item.Price100.ToString("#,##0")đ</span>
                        </p>
                        <a asp-action="Details" asp-route-productId="@item.Id" class="btn btn-primary bg-gradient border-0 form-control">
                            Chi tiết
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>