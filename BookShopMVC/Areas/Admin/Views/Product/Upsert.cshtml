@model ProductVM

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">@(Model.Product.Id !=0 ? "Sửa" : "Tạo") sản phẩm</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form enctype="multipart/form-data" method="post" class="row">
            <input type="hidden" asp-for="Product.Id" />
            <input type="hidden" asp-for="Product.ImageUrl" />
            <div class="row">
                <div class="col-10">
                    <div class="border p-3">
                        @* <div asp-validation-summary="ModelOnly"></div> *@
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Product.Title" type="text" class="form-control border-0 shadow" />
                            <label asp-for="Product.Title" class="ms-2 mt-1 fw-bold">Tên sản phẩm</label>
                            <span asp-validation-for="Product.Title" class="text-danger"></span>
                        </div>
                        <div class="py-2 col-12">
                            <label asp-for="Product.Description" class="ms-2 mt-1 text-muted fw-bold">Mô tả</label>
                            <textarea asp-for="Product.Description" id="mytextarea" type="text" class="form-control border-0 shadow"></textarea>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Product.ISBN" type="text" class="form-control border-0 shadow" />
                            <label asp-for="Product.ISBN" class="ms-2 mt-1 fw-bold">Mã sách</label>
                            <span asp-validation-for="Product.ISBN" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Product.Author" type="text" class="form-control border-0 shadow" />
                            <label asp-for="Product.Author" class="ms-2 mt-1 fw-bold">Tác giả</label>
                            <span asp-validation-for="Product.Author" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Product.ListPrice" type="text" class="form-control border-0 shadow" />
                            <label asp-for="Product.ListPrice" class="ms-2 mt-1 fw-bold">Giá tiền</label>
                            <span asp-validation-for="Product.ListPrice" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Product.Price" type="text" class="form-control border-0 shadow" />
                            <label asp-for="Product.Price" class="ms-2 mt-1 fw-bold">Giá tiền +</label>
                            <span asp-validation-for="Product.Price" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Product.Price100" type="text" class="form-control border-0 shadow" />
                            <label asp-for="Product.Price100" class="ms-2 mt-1 fw-bold">Giá tiền 100+</label>
                            <span asp-validation-for="Product.Price100" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Product.Price500" type="text" class="form-control border-0 shadow" />
                            <label asp-for="Product.Price500" class="ms-2 mt-1 fw-bold">Giá tiền 500+</label>
                            <span asp-validation-for="Product.Price500" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <select asp-for="@Model.Product.CategoryId" asp-items="@Model.CategoryList" class="form-select border-0 shadow">
                                <option disabled selected>-- Chọn danh mục --</option>
                            </select>
                            <label asp-for="Product.CategoryId" class="ms-2 mt-1 fw-bold">Thể loại</label>
                            <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input type="file" name="file" onchange="displayImage(this)" class="form-control border-0 shadow" />
                            <label asp-for="Product.ImageUrl" class="ms-2 mt-1 fw-bold">IMG</label>
                        </div>
                        <div class="row">
                            <div class="col-6 col-md-3 px-2">
                                @if (Model.Product.Id != 0)
                                {

                                    <button type="submit" class="btn btn-primary form-control btn-lg">Sửa</button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-primary form-control btn-lg">Tạo</button>
                                }

                            </div>
                            <div class="col-6 col-md-3 px-2">
                                <a asp-controller="product" asp-action="Index" class="btn btn-outline-primary border btn-lg form-control">
                                    Trở về danh sách
                                </a>
                            </div>
                        </div>

                    </div>
                </div> 

                <div class="col-2">
                    @if (@Model.Product.ImageUrl != null)
                    {
                        <img src="@Model.Product.ImageUrl" width="100%" id="imagePreview"
                             style="border-radius:5px; border:1px solid #bbb9b9" />
                    }
                    else
                    {
                        <img src="~/images/products/empty.png" width="100%" id="imagePreview"
                             style="border-radius:5px; border:1px solid #bbb9b9" />
                    }
                </div>
            </div>
           
        </form>
    </div>
</div>



@section Scripts {
    <script>
        tinymce.init({
          selector: '#mytextarea'
        });
    </script>
    <script>
        // Hàm xử lý hiển thị ảnh
        function displayImage(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    // Tìm thẻ img có id="imagePreview" và đổi src thành ảnh vừa chọn
                    document.getElementById('imagePreview').src = e.target.result;
                }

                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>
   @{ <partial name="_ValidationScriptsPartial" />}
}