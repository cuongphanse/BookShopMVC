@model Company

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">@(Model.Id !=0 ? "Sửa" : "Tạo") đối tác</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form enctype="multipart/form-data" method="post" class="row">
            <input type="hidden" asp-for="Id" />
            <div class="row">
                <div class="col-12">
                    <div class="border p-3">
                        @* <div asp-validation-summary="ModelOnly"></div> *@
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Name" type="text" class="form-control border-0 shadow" />
                            <label asp-for="Name" class="ms-2 mt-1 fw-bold">Tên đối tác</label>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>                     
                        <div class="form-floating py-2 col-12">
                            <input asp-for="PhoneNumber" type="text" class="form-control border-0 shadow" />
                            <label asp-for="PhoneNumber" class="ms-2 mt-1 fw-bold">Số điện thoại</label>
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="City" type="text" class="form-control border-0 shadow" />
                            <label asp-for="City" class="ms-2 mt-1 fw-bold">Thành phố</label>
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="State" type="text" class="form-control border-0 shadow" />
                            <label asp-for="State" class="ms-2 mt-1 fw-bold">Quận huyện</label>
                            <span asp-validation-for="State" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="StreetAddress" type="text" class="form-control border-0 shadow" />
                            <label asp-for="StreetAddress" class="ms-2 mt-1 fw-bold">Địa chỉ</label>
                            <span asp-validation-for="StreetAddress" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="PostalCode" type="text" class="form-control border-0 shadow" />
                            <label asp-for="PostalCode" class="ms-2 mt-1 fw-bold">Mã bưu chính</label>
                            <span asp-validation-for="PostalCode" class="text-danger"></span>
                        </div>                        
                        <div class="row">
                            <div class="col-6 col-md-3 px-2">
                                @if (Model.Id != 0)
                                {

                                    <button type="submit" class="btn btn-primary form-control btn-lg">Sửa</button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-primary form-control btn-lg">Tạo</button>
                                }

                            </div>
                            <div class="col-6 col-md-3 px-2">
                                <a asp-controller="Company" asp-action="Index" class="btn btn-outline-primary border btn-lg form-control">
                                    Trở về danh sách
                                </a>
                            </div>
                        </div>

                    </div>
                </div>           
            </div>
           
        </form>
    </div>
</div>



@section Scripts {
    <script>
        tinymce.init({
          selector: '#mytextarea'
        });
    </script>
   @{ <partial name="_ValidationScriptsPartial" />}
}